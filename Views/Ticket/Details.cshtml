@model OfficeSuite.Models.Ticket
@{
    ViewData["Title"] = "Ticket Details";
    var comments = ViewBag.Comments as List<OfficeSuite.Models.TicketComment>;
}

<div class="row mb-4">
    <div class="col-12">
        <a asp-action="Index" class="btn btn-sm btn-outline-secondary mb-3"><i data-feather="arrow-left"></i> Back to List</a>
        
        <div class="card card-modern shadow-sm">
            <div class="card-header bg-white card-header-modern d-flex justify-content-between align-items-center py-3">
                <div>
                    <span class="badge bg-light text-dark border me-2">#@Model.Id</span>
                    <h5 class="d-inline fw-bold text-primary mb-0">@Model.Subject</h5>
                </div>
                <div>
                    <span class="badge @(Model.Status == "Closed" ? "bg-secondary" : "bg-success") rounded-pill px-3">@Model.Status</span>
                </div>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-3">
                        <small class="text-muted d-block uppercase-tracking">Client</small>
                        <span class="fw-bold">@Model.ClientName</span>
                    </div>
                     <div class="col-md-3">
                        <small class="text-muted d-block uppercase-tracking">Priority</small>
                        <span class="fw-bold text-danger">@Model.Priority</span>
                    </div>
                     <div class="col-md-3">
                        <small class="text-muted d-block uppercase-tracking">Created</small>
                        <span>@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</span>
                    </div>
                    <div class="col-md-3">
                         <small class="text-muted d-block uppercase-tracking">Attachment</small>
                         @if(!string.IsNullOrEmpty(Model.AttachmentPath))
                         {
                             <a href="/Ticket/Download?path=@Model.AttachmentPath" class="text-decoration-none">
                                 <i data-feather="paperclip"></i> Download
                             </a>
                         }
                         else { <span class="text-muted">-</span> }
                    </div>
                </div>
                <div class="bg-light p-3 rounded">
                    <p class="mb-0 text-dark" style="white-space: pre-wrap;">@Model.Description</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <h6 class="fw-bold mb-3"><i data-feather="message-circle" class="me-2"></i>Discussion History</h6>
        
        @if(comments != null)
        {
            foreach(var c in comments)
            {
                <div class="d-flex mb-4">
                    <div class="flex-shrink-0">
                        @if(!string.IsNullOrEmpty(c.UserProfileImage))
                        {
                            <img src="@c.UserProfileImage" class="rounded-circle border" style="width: 40px; height: 40px; object-fit: cover;" alt="@c.UserName">
                        }
                        else
                        {
                            <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                @(c.UserName.Length > 0 ? c.UserName.Substring(0,1).ToUpper() : "?")
                            </div>
                        }
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="card border-0 shadow-sm">
                            <div class="card-body p-3">
                                    <div class="d-flex justify-content-between mb-2">
                                        <h6 class="mb-0 fw-bold">@c.UserName</h6>
                                        <small class="text-muted">@c.CreatedAt.ToString("MMM dd, HH:mm")</small>
                                    </div>
                                    <div id="comment-text-@c.Id">
                                        <p class="mb-1">@c.Comment</p>
                                        @if(!string.IsNullOrEmpty(c.AttachmentPath))
                                        {
                                            <div class="mt-2">
                                                <a href="/Ticket/Download?path=@c.AttachmentPath" class="btn btn-sm btn-outline-light text-dark border">
                                                    <i data-feather="paperclip" style="width: 12px;"></i> Attachment
                                                </a>
                                            </div>
                                        }
                                        @if(User.Identity?.Name == c.UserName || User.IsInRole("Admin"))
                                        {
                                            <div class="mt-2">
                                                <button class="btn btn-sm btn-link text-primary p-0" onclick="toggleEdit(@c.Id)"><i data-feather="edit-2" style="width: 12px;"></i> Edit</button>
                                            </div>
                                        }
                                    </div>
                                    <div id="comment-edit-@c.Id" style="display:none;">
                                        <form asp-action="EditComment" method="post" enctype="multipart/form-data">
                                            <input type="hidden" name="commentId" value="@c.Id" />
                                            <input type="hidden" name="ticketId" value="@Model.Id" />
                                            <textarea name="message" class="form-control form-control-sm mb-2" rows="2">@c.Comment</textarea>
                                            <input type="file" name="attachment" class="form-control form-control-sm mb-2">
                                            <button type="submit" class="btn btn-sm btn-primary">Save</button>
                                            <button type="button" class="btn btn-sm btn-light border" onclick="toggleEdit(@c.Id)">Cancel</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            
            <script>
                function toggleEdit(id) {
                    var textDiv = document.getElementById('comment-text-' + id);
                    var editDiv = document.getElementById('comment-edit-' + id);
                    if (textDiv.style.display === 'none') {
                        textDiv.style.display = 'block';
                        editDiv.style.display = 'none';
                    } else {
                        textDiv.style.display = 'none';
                        editDiv.style.display = 'block';
                    }
                }
            </script>

        <!-- Add Reply -->
        <div class="card card-modern shadow-sm mt-4">
            <div class="card-body bg-light">
                <h6 class="fw-bold mb-3">Add Reply</h6>
                <form asp-action="AddComment" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="ticketId" value="@Model.Id" />
                    <div class="mb-3">
                        <textarea name="message" class="form-control" rows="3" placeholder="Type your reply here..." required></textarea>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="input-group w-auto">
                             <input type="file" name="attachment" class="form-control form-control-sm">
                        </div>
                        <button type="submit" class="btn btn-primary px-4">
                            <i data-feather="send" class="me-1"></i> Post Reply
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
