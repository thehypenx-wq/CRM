@model OfficeSuite.Models.TransactionSummary

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">Financial Overview</h2>
        <p class="text-muted mb-0">Manage your income, expenses, and bank accounts.</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-controller="Account" asp-action="Index" class="btn btn-outline-primary">
            <i data-feather="briefcase"></i> Manage Accounts
        </a>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#transactionModal">
            <i data-feather="plus"></i> New Transaction
        </button>
    </div>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card card-modern border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #1cc88a 0%, #13855c 100%); color: white;">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="small text-uppercase opacity-75 fw-bold">Total Income</div>
                    <i data-feather="trending-up" class="opacity-75"></i>
                </div>
                <div class="h2 mb-0 fw-bold">@Model.TotalIncome.ToString("C")</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card card-modern border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #e74a3b 0%, #be2617 100%); color: white;">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="small text-uppercase opacity-75 fw-bold">Total Expense</div>
                    <i data-feather="trending-down" class="opacity-75"></i>
                </div>
                <div class="h2 mb-0 fw-bold">@Model.TotalExpense.ToString("C")</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card card-modern border-0 shadow-sm h-100 bg-white text-dark">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="small text-uppercase text-muted fw-bold">Net Balance</div>
                    <i data-feather="dollar-sign" class="text-muted"></i>
                </div>
                <div class="h2 mb-0 fw-bold @(Model.Balance >= 0 ? "text-success" : "text-danger")">@Model.Balance.ToString("C")</div>
            </div>
        </div>
    </div>
</div>

<!-- Ledger Table -->
<div class="card card-modern shadow-sm">
    <div class="card-header bg-white py-3 border-bottom ml-3 d-flex justify-content-between align-items-center">
        <h5 class="mb-0 text-dark">Transaction Report</h5>
        <div style="width: 250px;">
            <div class="input-group input-group-sm">
                 <span class="input-group-text bg-light border-end-0"><i data-feather="search" style="width: 14px;"></i></span>
                 <input type="text" id="txnSearch" class="form-control border-start-0" placeholder="Filter transactions...">
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-muted small text-uppercase">
                    <tr>
                        <th class="ps-4 py-3" style="width: 15%;">Date</th>
                        <th class="py-3" style="width: 25%;">Account</th>
                        <th class="py-3" style="width: 15%;">Entered By</th>
                        <th class="py-3" style="width: 20%;">Description</th>
                        <th class="py-3 text-end" style="width: 15%;">Amount</th>
                        <th class="pe-4 py-3 text-end" style="width: 15%;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model.Transactions)
                    {
                        <tr>
                            <td class="ps-4 text-nowrap">
                                <span class="fw-bold text-dark">@t.TransactionDate.ToString("dd MMM")</span>
                                <span class="small text-muted d-block">@t.TransactionDate.ToString("yyyy")</span>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-light rounded p-2 me-2 text-muted">
                                        <i data-feather="credit-card" style="width: 16px; height: 16px;"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark">@t.AccountName</div>
                                        <span class="badge bg-light text-dark border rounded-pill px-2 py-0" style="font-size: 0.7rem;">@t.Type</span>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center text-muted">
                                    <i data-feather="user" style="width: 12px; height: 12px;" class="me-1"></i>
                                    <span class="small">@t.CreatedByName</span>
                                </div>
                            </td>
                            <td>
                                <span class="text-dark">@t.Description</span>
                            </td>
                            <td class="text-end fw-bold">
                                @if(t.Type == "Income")
                                {
                                    <span class="text-success">+ @t.Amount.ToString("N2")</span>
                                }
                                else
                                {
                                    <span class="text-danger">- @t.Amount.ToString("N2")</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@t.Id" class="btn btn-sm btn-light text-muted" title="Edit">
                                        <i data-feather="edit-2" style="width: 14px;"></i>
                                    </a>
                                    <form asp-action="Delete" method="post" style="display:inline;" onsubmit="return confirm('Delete this transaction?');">
                                        <input type="hidden" name="id" value="@t.Id" />
                                        <button type="submit" class="btn btn-sm btn-light text-danger" title="Delete">
                                            <i data-feather="trash-2" style="width: 14px;"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                    @if (!Model.Transactions.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i data-feather="list" style="width: 48px; height: 48px; opacity: 0.2;" class="mb-2"></i>
                                <p>No transactions found. Start by adding one.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add Transaction Modal -->
<div class="modal fade" id="transactionModal" tabindex="-1">
    <div class="modal-dialog">
        <form asp-action="Create" method="post">
            <div class="modal-content card-modern">
                <div class="modal-header border-bottom-0">
                    <h5 class="modal-title fw-bold">New Transaction</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label text-muted small fw-bold">Account</label>
                        <select name="accountId" class="form-select" required>
                             @foreach(var acc in (List<OfficeSuite.Models.Account>)ViewBag.Accounts)
                            {
                                <option value="@acc.Id">@acc.Name (Bal: @acc.Balance.ToString("N0"))</option>
                            }
                        </select>
                         <div class="form-text"><a asp-controller="Account" asp-action="Index">Manage Accounts</a></div>
                    </div>
                    <div class="row g-2 mb-3">
                         <div class="col-6">
                            <label class="form-label text-muted small fw-bold">Type</label>
                            <div class="btn-group w-100" role="group">
                                <input type="radio" class="btn-check" name="type" id="typeInc" value="Income" checked>
                                <label class="btn btn-outline-success" for="typeInc">Income</label>

                                <input type="radio" class="btn-check" name="type" id="typeExp" value="Expense">
                                <label class="btn btn-outline-danger" for="typeExp">Expense</label>
                            </div>
                        </div>
                        <div class="col-6">
                            <label class="form-label text-muted small fw-bold">Amount</label>
                            <div class="input-group">
                                <span class="input-group-text border-end-0 bg-white text-muted">$</span>
                                <input type="number" step="0.01" name="amount" class="form-control border-start-0 ps-0" placeholder="0.00" required>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-muted small fw-bold">Description</label>
                        <textarea name="description" class="form-control" rows="2" placeholder="e.g. Server Costs, Client Payment..." required></textarea>
                    </div>
                </div>
                <div class="modal-footer border-top-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary px-4">Save Transaction</button>
                </div>
            </div>
        </form>
    </div>
</div>
