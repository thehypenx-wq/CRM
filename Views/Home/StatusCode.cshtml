@{
    ViewData["Title"] = "Error";
    var code = Context.Request.Query["code"];
    var message = "Something went wrong.";
    var icon = "alert-circle";

    if (code == "404")
    {
        message = "The page you are looking for does not exist.";
        icon = "map";
    }
    else if (code == "403")
    {
        message = "You do not have permission to access this resource.";
        icon = "lock";
    }
}

<div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 70vh;">
    <div class="text-center">
        <div class="display-1 fw-bold text-primary mb-3">
            <i data-feather="@icon" style="width: 80px; height: 80px;"></i>
        </div>
        <h1 class="display-4 fw-bold">@code</h1>
        <p class="lead text-muted mb-4">@message</p>
        <a href="/" class="btn btn-primary btn-lg shadow-sm">
            <i data-feather="home" class="me-2"></i> Back to Dashboard
        </a>
    </div>
</div>
