@model OfficeSuite.Models.User
@{
    ViewData["Title"] = "My Profile";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card card-modern mb-4">
            <div class="card-body p-5">
                <div class="d-flex align-items-center mb-5">
                    <div class="me-4 position-relative">
                        @if(!string.IsNullOrEmpty(Model.ProfileImagePath))
                        {
                            <div class="profile-image-container shadow-lg rounded-circle border border-4 border-white overflow-hidden" style="width: 120px; height: 120px;">
                                <img src="@Model.ProfileImagePath" class="img-fluid" style="width: 100%; height: 100%; object-fit: cover;">
                            </div>
                        }
                        else
                        {
                            <div class="rounded-circle bg-gradient-primary d-flex align-items-center justify-content-center shadow-lg border border-4 border-white" style="width: 120px; height: 120px; font-size: 3rem; color: white;">
                                @(Model.Username.Length > 0 ? Model.Username.Substring(0, 1).ToUpper() : "U")
                            </div>
                        }
                    </div>

                    
                    <div class="flex-grow-1">
                        <h2 class="mb-1">@Model.Username</h2>
                        <span class="badge bg-light text-dark border me-2">@Model.Role</span>
                        <span class="text-muted small">Member since @Model.CreatedAt.ToString("MMM yyyy")</span>
                        
                        <form asp-action="UpdateAvatar" method="post" enctype="multipart/form-data" class="mt-3">
                            <label class="btn btn-sm btn-outline-primary" for="profileImageInput">
                                <i data-feather="camera" class="me-1"></i> Change Avatar
                            </label>
                            <input type="file" name="profileImage" id="profileImageInput" class="d-none" onchange="this.form.submit()" accept="image/*">
                        </form>
                    </div>
                </div>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i data-feather="check-circle" class="me-2"></i> @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i data-feather="alert-circle" class="me-2"></i> @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div class="row">
                    <div class="col-md-6 mb-4">
                        <label class="form-label text-muted small uppercase fw-bold ls-1">Account Username</label>
                        <div class="form-control-plaintext fs-5">@Model.Username</div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <label class="form-label text-muted small uppercase fw-bold ls-1">Email Address</label>
                        <div class="form-control-plaintext fs-5">@Model.Email</div>
                    </div>
                </div>

                <hr class="my-5 opacity-5">

                <h4 class="mb-4">Security Settings</h4>
                <form asp-action="UpdatePassword" method="post" class="auth-glass-card p-4 border shadow-none" style="background: rgba(0,0,0,0.02);">
                    <div class="mb-3">
                        <label class="form-label small">Current Password</label>
                        <input type="password" name="currentPassword" class="form-control" required>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label small">New Password</label>
                            <input type="password" name="newPassword" class="form-control" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label small">Confirm New Password</label>
                            <input type="password" name="confirmPassword" class="form-control" required>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">
                        <i data-feather="lock" class="me-2" style="width: 16px;"></i> Update Password
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .ls-1 { letter-spacing: 0.05rem; }
    .uppercase { text-transform: uppercase; }
</style>
