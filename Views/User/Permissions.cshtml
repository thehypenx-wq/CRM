@model List<OfficeSuite.Models.AppModule>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card card-modern">
            <div class="card-header bg-white pt-4 px-4 border-bottom-0">
                <h4 class="mb-0">Manage Permissions for @ViewBag.Username</h4>
                <p class="text-muted small">Select the modules this user is allowed to access</p>
            </div>
            <div class="card-body px-4 pb-4">
                <form asp-action="Permissions" method="post">
                    <input type="hidden" name="id" value="@ViewBag.UserId" />
                    
                    <div class="row">
                        @foreach (var module in Model)
                        {
                            <div class="col-md-6 mb-3">
                                <div class="form-check form-switch p-3 border rounded">
                                    <input class="form-check-input" type="checkbox" name="moduleIds" value="@module.Id" id="mod_@module.Id" @(module.IsGranted ? "checked" : "")>
                                    <label class="form-check-label ms-2 fw-bold" for="mod_@module.Id">
                                        @module.DisplayName
                                    </label>
                                    <div class="small text-muted ms-4">Allows access to the @module.DisplayName module</div>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="mt-4 text-end border-top pt-3">
                        <a asp-action="Index" class="btn btn-light me-2">Cancel</a>
                        <button type="submit" class="btn btn-primary px-4">
                            <i data-feather="save" class="me-1"></i> Save Permissions
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
