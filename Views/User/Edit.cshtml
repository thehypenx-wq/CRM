@model OfficeSuite.Models.User

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card card-modern">
            <div class="card-header bg-white pt-4 px-4 border-bottom-0">
                <h4 class="mb-0">Edit User Account</h4>
            </div>
            <div class="card-body px-4 pb-4">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label text-muted small">Username</label>
                            <input asp-for="Username" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted small">Email Address</label>
                            <input asp-for="Email" class="form-control" type="email" required />
                        </div>
                        <div class="col-12 mt-4 text-end">
                            <a asp-action="Index" class="btn btn-light me-2">Cancel</a>
                            <button type="submit" class="btn btn-primary"><i data-feather="save"></i> Save Changes</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

