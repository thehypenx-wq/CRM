@model List<OfficeSuite.Models.Account>
<div class="card card-modern mb-4">
    <div class="card-header bg-white pt-4 px-4 border-bottom-0 d-flex justify-content-between align-items-center">
        <h4 class="mb-0">My Accounts</h4>
        <div>
        <button class="btn btn-success me-2" data-bs-toggle="modal" data-bs-target="#transferModal">
            <i data-feather="repeat" class="me-1"></i> Transfer
        </button>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createAccountModal">
            <i data-feather="plus" class="me-1"></i> New Account
        </button>
    </div>
    </div>
    <div class="card-body px-4">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Account Name</th>
                        <th>Currency</th>
                        <th>Balance</th>
                        <th>Shared With</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var acc in Model)
                    {
                        <tr>
                            <td class="fw-bold">
                                <a asp-action="Details" asp-route-id="@acc.Id" class="text-decoration-none text-dark">@acc.Name</a>
                            </td>
                            <td>@acc.Currency</td>
                            <td class="@(acc.Balance >= 0 ? "text-success" : "text-danger") fw-bold">@acc.Balance.ToString("C")</td>
                            <td>
                                @if(!string.IsNullOrEmpty(acc.SharedWithNames))
                                {
                                    <span class="badge bg-info text-dark">@acc.SharedWithNames</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>Owner</td>
                            <td>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-outline-primary btn-sm btn-share" 
                                            data-id="@acc.Id" 
                                            data-name="@acc.Name"
                                            data-bs-toggle="tooltip" 
                                            title="Share">
                                        <i data-feather="share-2"></i>
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary btn-sm btn-edit" 
                                            data-id="@acc.Id" 
                                            data-name="@acc.Name" 
                                            data-currency="@acc.Currency"
                                            data-bs-toggle="tooltip" 
                                            title="Edit">
                                        <i data-feather="edit-2"></i>
                                    </button>
                                    <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this account?');">
                                        <input type="hidden" name="id" value="@acc.Id" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm"
                                                data-bs-toggle="tooltip" 
                                                title="Delete">
                                            <i data-feather="trash-2"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr><td colspan="5" class="text-center text-muted">No accounts found.</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modals -->

<!-- Create Account Modal -->
<div class="modal fade" id="createAccountModal" tabindex="-1">
    <div class="modal-dialog">
        <form asp-action="Create" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create New Account</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Account Name</label>
                        <input type="text" name="name" class="form-control" placeholder="e.g. Bank of America" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Currency</label>
                        <select name="currency" class="form-select">
                            <option value="USD">USD ($)</option>
                            <option value="EUR">EUR (€)</option>
                            <option value="GBP">GBP (£)</option>
                            <option value="INR">INR (₹)</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Initial Balance</label>
                        <input type="number" name="balance" class="form-control" step="0.01" value="0.00">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Create Account</button>
                </div>
            </div>
        </form>
    </div>
</div>

    </div>
</div>

<!-- Edit Account Modal -->
<div class="modal fade" id="editAccountModal" tabindex="-1">
    <div class="modal-dialog">
        <form asp-action="Edit" method="post">
            <input type="hidden" name="id" id="editAccountId" />
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Account</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Account Name</label>
                        <input type="text" name="name" id="editAccountName" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Currency</label>
                         <select name="currency" id="editAccountCurrency" class="form-select">
                            <option value="USD">USD ($)</option>
                            <option value="EUR">EUR (€)</option>
                            <option value="GBP">GBP (£)</option>
                            <option value="INR">INR (₹)</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Share Modal -->
<div class="modal fade" id="shareModal" tabindex="-1">
    <div class="modal-dialog">
        <form asp-action="Share" method="post">
            <input type="hidden" name="accountId" id="shareAccountId" />
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Share Account: <span id="shareAccountName"></span></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p class="small text-muted">Allow another user to view and add transactions to this account.</p>
                    <div class="mb-3">
                        <label class="form-label">Select User</label>
                        <select name="username" class="form-select" required>
                            <option value="">-- Select User --</option>
                            @if(ViewBag.AllUsers != null)
                            {
                                foreach(var kvp in (Dictionary<int, string>)ViewBag.AllUsers)
                                {
                                    <option value="@kvp.Value">@kvp.Value</option>
                                }
                            }
                        </select>
                    </div>
                    <hr />
                    <h6>Current Access</h6>
                    <ul id="sharedUsersList" class="list-group mb-3">
                        <li class="list-group-item text-muted small">Loading...</li>
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Grant Access</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Transfer Modal -->
<div class="modal fade" id="transferModal" tabindex="-1">
    <div class="modal-dialog">
        <form asp-controller="Transaction" asp-action="Transfer" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Transfer Funds</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">From Account (Source)</label>
                        <select name="fromAccountId" class="form-select" required>
                            @foreach(var acc in Model)
                            {
                                <option value="@acc.Id">@acc.Name (Bal: @acc.Balance.ToString("C"))</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">To Account (Destination)</label>
                        <select name="toAccountId" class="form-select" required>
                            @foreach(var acc in Model)
                            {
                                <option value="@acc.Id">@acc.Name</option>
                            }
                        </select>
                    </div>
                    <div class="row">
                         <div class="col-md-6 mb-3">
                            <label class="form-label">Amount</label>
                            <input type="number" name="amount" class="form-control" step="0.01" min="0.01" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Date</label>
                            <input type="datetime-local" name="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description / Remarks</label>
                        <input type="text" name="description" class="form-control" placeholder="e.g. Monthly Savings" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Transfer Now</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize Tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });

        // Initialize Icons if needed
        if(typeof feather !== 'undefined') feather.replace();

        // Safe Event Delegation for Edit
        document.body.addEventListener('click', function(e) {
            var btn = e.target.closest('.btn-edit');
            if(btn) {
                var id = btn.getAttribute('data-id');
                var name = btn.getAttribute('data-name');
                var currency = btn.getAttribute('data-currency');
                
                document.getElementById('editAccountId').value = id;
                document.getElementById('editAccountName').value = name;
                document.getElementById('editAccountCurrency').value = currency;
                
                var modal = new bootstrap.Modal(document.getElementById('editAccountModal'));
                modal.show();
            }
        });

        // Safe Event Delegation for Share
        document.body.addEventListener('click', function(e) {
            var btn = e.target.closest('.btn-share');
            if(btn) {
                var id = btn.getAttribute('data-id');
                var name = btn.getAttribute('data-name');
                
                document.getElementById('shareAccountId').value = id;
                document.getElementById('shareAccountName').innerText = name;
                
                var modal = new bootstrap.Modal(document.getElementById('shareModal'));
                modal.show();

                // Load Shared Users
                loadSharedUsers(id);
            }
        });
    });

    function loadSharedUsers(accountId) {
        var list = document.getElementById('sharedUsersList');
        list.innerHTML = '<li class="list-group-item text-muted small">Loading...</li>';

        fetch('/Account/GetSharedUsers?accountId=' + accountId)
            .then(res => res.json())
            .then(data => {
                list.innerHTML = '';
                if(data.length === 0) {
                    list.innerHTML = '<li class="list-group-item text-muted small">Not shared with anyone.</li>';
                    return;
                }
                data.forEach(user => {
                    var li = document.createElement('li');
                    li.className = 'list-group-item d-flex justify-content-between align-items-center';
                    li.innerHTML = `
                        <span>${user.username}</span>
                        <button type="button" class="btn btn-sm btn-outline-danger" onclick="revokeAccess(${accountId}, ${user.userId})">
                            &times;
                        </button>
                    `;
                    list.appendChild(li);
                });
            })
            .catch(err => {
                list.innerHTML = '<li class="list-group-item text-danger small">Error loading users.</li>';
            });
    }

    function revokeAccess(accountId, userId) {
        if(!confirm('Revoke access for this user?')) return;
        
        // Anti-forgery token might be needed if enabled, but simpler here for now or assuming cookie auth is enough for this internal app
        // Using form data for simplicity
        var formData = new FormData();
        formData.append('accountId', accountId);
        formData.append('accessUserId', userId);

        fetch('/Account/RevokeAccess', {
            method: 'POST',
            body: formData
        }).then(res => {
            if(res.ok) {
                loadSharedUsers(accountId);
            } else {
                alert('Failed to revoke access.');
            }
        });
    }
</script>
