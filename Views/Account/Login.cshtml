@model OfficeSuite.Models.LoginViewModel

<div class="auth-page-bg">
    <div class="auth-glass-card">
        <div class="auth-brand">HypeNXCRM</div>
        <h4 class="mb-4 fw-bold">Sign In</h4>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
            <div class="mb-3 text-start">
                <label asp-for="Email" class="form-label small opacity-75">Email or Username</label>
                <input asp-for="Email" class="form-control glass-input-auth" placeholder="Enter your credentials" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            <div class="mb-4 text-start">
                <label asp-for="Password" class="form-label small opacity-75">Password</label>
                <input asp-for="Password" type="password" class="form-control glass-input-auth" placeholder="••••••••" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            <button type="submit" class="auth-btn w-100 py-2 fw-bold">Login to Dashboard</button>
@* 
            <div class="mt-4">
                <span class="opacity-75 small">Don't have an account?</span>
                <a asp-action="Register" class="auth-link ms-1 fw-bold">Create one</a>
            </div>
*@
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
