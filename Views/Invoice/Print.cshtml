@model OfficeSuite.Models.Invoice

@{
    Layout = null; // No layout for print view
}

<!DOCTYPE html>
<html>
<head>
    <title>Invoice #@Model.Id</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { font-family: 'Times New Roman', Times, serif; }
        .invoice-box {
            max-width: 800px;
            margin: auto;
            padding: 30px;
            border: 1px solid #eee;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
            font-size: 16px;
            line-height: 24px;
        }
        .header-title { font-size: 24px; font-weight: bold; text-transform: uppercase; }
        .table-borderless td, .table-borderless th { border: none; }
    </style>
</head>
<body>

    <div class="invoice-box mt-5">
        <div class="text-center mb-4">
            <h1 class="header-title">Tax Invoice</h1>
        </div>

        <div class="row mb-4">
            <div class="col-6">
                <strong>Billed To:</strong><br>
                @Model.ClientName<br>
                @ViewBag.CompanyName<br>
                @ViewBag.Address<br>
                Email: @ViewBag.Email<br>
                Phone: @ViewBag.Phone
            </div>
            <div class="col-6 text-end">
                <strong>Invoice No:</strong> #INV-@Model.Id<br>
                <strong>Date:</strong> @Model.RenewalDate.ToString("dd-MMM-yyyy")<br>
                <strong>Due Date:</strong> @Model.RenewalDate.ToString("dd-MMM-yyyy")<br>
                <strong>Status:</strong> @(Model.IsPaid ? "PAID" : "UNPAID")
            </div>
        </div>

        <table class="table table-bordered">
            <thead class="bg-light">
                <tr>
                    <th>Description</th>
                    <th class="text-end">Amount (INR)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Model.ServiceType<br>
                        <small class="text-muted">@Model.Description</small>
                    </td>
                    <td class="text-end">@Model.Amount.ToString("N2")</td>
                </tr>
                <!-- Spacer rows could be added here -->
                 <tr style="height: 100px;"><td></td><td></td></tr>
            </tbody>
            <tfoot>
                <tr>
                    <td class="text-end"><strong>Total</strong></td>
                    <td class="text-end"><strong>@Model.Amount.ToString("N2")</strong></td>
                </tr>
            </tfoot>
        </table>

        <div class="row mt-5">
            <div class="col-6">
                <p><strong>Bank Details:</strong><br>
                Bank: HDFC Bank<br>
                A/C No: XXXXXXXXXX<br>
                IFSC: HDFC0000123</p>
            </div>
            <div class="col-6 text-end" style="margin-top: 50px;">
                <p>_______________________<br>
                Authorized Signatory</p>
            </div>
        </div>
        
        <div class="text-center mt-5 small text-muted">
            This is a computer generated invoice.
        </div>
    </div>

    <script>
        window.print();
    </script>
</body>
</html>
