@model OfficeSuite.Models.Invoice

@{
    ViewData["Title"] = "Edit Renewal";
}

<div class="card card-modern">
    <div class="card-header bg-white border-bottom-0 pt-4 px-4">
        <h4 class="mb-0">Edit Renewal / Invoice</h4>
    </div>
    <div class="card-body px-4 pb-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" />
            
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label text-muted small">Client</label>
                    <select asp-for="ClientId" class="form-select" required>
                        <option value="">Select Client</option>
                        @if (ViewBag.Clients != null)
                        {
                            @foreach (var c in ViewBag.Clients)
                            {
                                <option value="@c.Id">@c.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label text-muted small">Service Type</label>
                    <select asp-for="ServiceType" class="form-select" required>
                        <option value="Domain">Domain</option>
                        <option value="Server">Server</option>
                        <option value="Email">Email</option>
                        <option value="Software">Software</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
                <div class="col-md-12">
                    <label class="form-label text-muted small">Description</label>
                    <input asp-for="Description" class="form-control" required placeholder="e.g., example.com Renewal" />
                </div>
                <div class="col-md-4">
                    <label class="form-label text-muted small">Amount</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="Amount" type="number" step="0.01" class="form-control" required />
                    </div>
                </div>
                <div class="col-md-4">
                    <label class="form-label text-muted small">Renewal Date</label>
                    <input asp-for="RenewalDate" type="datetime-local" class="form-control" value="@Model.RenewalDate.ToString("yyyy-MM-ddTHH:mm")" required />
                </div>
                <div class="col-md-4">
                    <label class="form-label text-muted small">Status</label>
                    <div class="form-check mt-2">
                        <input asp-for="IsPaid" class="form-check-input" type="checkbox" id="isPaidCheck">
                        <label class="form-check-label" for="isPaidCheck">
                            Mark as Paid
                        </label>
                    </div>
                </div>

                <div class="col-12 mt-4 d-flex justify-content-between">
                    <div>
                        @if (!string.IsNullOrEmpty(Model.ClientEmail))
                        {
                            <a asp-controller="BulkEmail" asp-action="Index" 
                               asp-route-to="@Model.ClientEmail" 
                               asp-route-subject="Invoice Renewal: @Model.Description"
                               class="btn btn-outline-info">
                                <i data-feather="mail"></i> Email Client
                            </a>
                        }
                    </div>
                    <div>
                        <a asp-action="Index" class="btn btn-light me-2">Cancel</a>
                        <button type="submit" class="btn btn-primary"><i data-feather="save"></i> Save Changes</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
