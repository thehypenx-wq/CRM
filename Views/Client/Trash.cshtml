@model List<OfficeSuite.Models.Client>

<h2>Trash Bin - Clients</h2>
<a asp-action="Index" class="btn btn-secondary mb-3"><i data-feather="arrow-left"></i> Back to List</a>

<div class="card card-modern">
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Company</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var client in Model)
                {
                    <tr>
                        <td>@client.Name</td>
                        <td>@client.CompanyName</td>
                        <td>
                             <form asp-action="Restore" method="post" style="display:inline;">
                                 <input type="hidden" name="id" value="@client.Id" />
                                 <button type="submit" class="btn btn-success btn-sm"><i data-feather="refresh-ccw"></i> Restore</button>
                            </form>
                            <form asp-action="HardDelete" method="post" style="display:inline;" onsubmit="return confirm('PERMANENTLY DELETE? This cannot be undone.');">
                                 <input type="hidden" name="id" value="@client.Id" />
                                 <button type="submit" class="btn btn-danger btn-sm"><i data-feather="x-circle"></i> Delete Permanently</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
